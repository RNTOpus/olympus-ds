{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/components/src",
  "projectType": "library",
  "targets": {
    "watch": {
      "executor": "./tools/executors/watch:watch",
      "options": {
        "sources": ["packages/components/src"],
        "commands": [
          "nx run components:build",
          "echo Successfully rebuilt components"
        ]
      }
    },
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/components",
        "commands": [
          {
            "command": "rimraf dist/packages/components"
          },
          {
            "command": "rimraf tmp/packages/components"
          },
          {
            "command": "node tools/scripts/components-build.mjs"
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/components/**/*.ts"]
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "packages/components",
        "commands": [
          {
            "command": "web-test-runner"
          }
        ]
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs components {args.ver} {args.tag}"
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build"
        }
      ]
    },
    "storybook": {
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "uiFramework": "@storybook/web-components",
        "port": 4400,
        "config": {
          "configFolder": "packages/components/.storybook"
        }
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nrwl/storybook:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "uiFramework": "@storybook/web-components",
        "outputPath": "dist/storybook/components",
        "config": {
          "configFolder": "packages/components/.storybook"
        }
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    }
  },
  "tags": []
}
