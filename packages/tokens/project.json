{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/tokens/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/tokens",
        "commands": [
          {
            "command": "rimraf dist/packages/tokens"
          },
          {
            "command": "node tools/scripts/tokens-build.mjs"
          }
        ]
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "changelogHeader": "# Changelog @olympus/tokens \n",
        "baseBranch": "develop",
        "syncVersions": false,
        "commitMessageFormat": "chore(${projectName}): release: v${version}",
        "push": true
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs tokens {args.ver} {args.tag}"
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "version"
        },
        {
          "projects": "self",
          "target": "build"
        }
      ]
    }
  },
  "tags": []
}
